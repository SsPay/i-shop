  <h3 class="row justify-content-center mt-1 products">Список товаров:</h3>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-lg-4 col-xl-4 col-md-6 col">
        <div class="mb-5">
          <%= link_to product, class:"product_title" do %>
          <%product.images.each do |image, n| %>
            <%= image_tag(image.url(:thumb), class: "rounded mx-auto d-block")%>
            <% n=+1 %>
            <% break if n > 0 %>
          <% end %>
              <div class="cart_title">
                <b><%= product.title%></b>
              </div>
            <div class="row cart_price">
              <div class="col">
                <h5><%= product.price %> ₴</h5>
              </div>
              <div class="col">
                <%= link_to (fa_icon "cart-plus", text: "Buy"), product_path(product), class: "btn btn-outline-primary" %>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-center ">
    <%= will_paginate(@products, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'pagination-sm ') %>
  </div>
