<!DOCTYPE html>
<html>
  <head>
    <title>IShop-admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_pack_tag "application", media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <%= link_to (fa_icon "heart", text: "I-Shop"), root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to (fa_icon "list", text: "Categories"), admin_products_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
          </form>
        </li>
      </ul>
      <% if current_user %>
      <li class="dropdown btn btn-outline-primary">
        <a class="dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Actions
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to (fa_icon "plus-circle", text: "New product"), new_admin_product_path, class: "dropdown-item" %>
            <%= link_to (fa_icon "plus-circle", text: "New category"), new_admin_category_path, class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="#">Something else here</a>
        </div>
      </li>
      &nbsp;&nbsp;
      <span class="text-light"><%= fa_icon "user" %> <%= current_user.email %>&nbsp;</span>
        <%= link_to 'Log out', logout_path, class: "btn btn-primary my-2 my-lg-0"%>
      <% else %>
        <%= link_to 'Sign Up', signup_path, class: "btn btn-primary my-2 my-lg-0" %>
        <%= link_to 'Log in', login_path, class: "btn btn-primary my-2 my-lg-0" %>
      <% end %>
    </div>
  </nav>
    </div>
    <div class="main-main container">
          <%= yield %>
    </div>
  </body>
</html>
