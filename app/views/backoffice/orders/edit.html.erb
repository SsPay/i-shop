<div class="container">
<h1>Update order </h1>

  <%= form_with(model: [ :admin, @order ], local: true) do |form| %>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment, class: "form-control" %>
  </div>
<br>
  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Order::STATUS_TYPES, prompt: 'status' %>
  </div>

  <div class="text-center actions">
    <%= form.submit "Submit", class: "btn btn-dark" %>
  </div>

<% end %>
<br>
</div>
